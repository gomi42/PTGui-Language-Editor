<UserControl x:Class="PTGui_Language_Editor.NaviControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="150"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="0,0,0,10"
          VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0,0,40,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="{Binding IsPageSelectionVisible,
                                         Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Margin="0,0,5,0"
                       VerticalAlignment="Center"
                       Text="Per Page" />
            <ComboBox Width="50"
                      ItemsSource="{Binding ItemsPerPageSelection}"
                      SelectedItem="{Binding SelectedItemsPerPage}" />
        </StackPanel>
        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button Width="40"
                    Height="22"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding FirstPage}"
                    Content="&lt;&lt;" />
            <Button Width="40"
                    Height="22"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Command="{Binding PrevPage}"
                    Content="&lt;" />
            <TextBox Height="22"
                     MinWidth="30"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     Text="{Binding CurrentPageDisplay,
                                    UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Return"
                                Command="{Binding ReturnPressed}" />
                </TextBox.InputBindings>
            </TextBox>
            <TextBlock VerticalAlignment="Center"
                       Text=" / " />
            <TextBlock MinWidth="30"
                       VerticalAlignment="Center"
                       Text="{Binding MaxPages}" />
            <Button Width="40"
                    Height="22"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Command="{Binding NextPage}"
                    Content="&gt;" />
            <Button Grid.ColumnSpan="2"
                    Width="40"
                    Height="22"
                    Margin="0,0,0,00"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Command="{Binding LastPage}"
                    Content="&gt;&gt;" />
        </StackPanel>
    </Grid>
</UserControl>
